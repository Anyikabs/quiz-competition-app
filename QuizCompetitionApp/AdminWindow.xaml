<Window x:Class="QuizCompetitionApp.AdminWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Admin Panel" Height="600" Width="400">
    <ScrollViewer>
        <StackPanel Margin="20" VerticalAlignment="Top">
            <TextBlock Text="Enter Question:" Margin="0,0,0,5"/>
            <TextBox x:Name="QuestionTextBox" Margin="0,0,0,10" Height="30"/>
            <TextBlock Text="Options:" Margin="0,10,0,5"/>
            <TextBox x:Name="Option1TextBox" Margin="0,0,0,5" Height="30"/>
            <CheckBox x:Name="CorrectOption1CheckBox" Content="Correct" Margin="0,0,0,10"/>

            <TextBox x:Name="Option2TextBox" Margin="0,0,0,5" Height="30"/>
            <CheckBox x:Name="CorrectOption2CheckBox" Content="Correct" Margin="0,0,0,10"/>

            <TextBox x:Name="Option3TextBox" Margin="0,0,0,5" Height="30"/>
            <CheckBox x:Name="CorrectOption3CheckBox" Content="Correct" Margin="0,0,0,10"/>

            <TextBox x:Name="Option4TextBox" Margin="0,0,0,5" Height="30"/>
            <CheckBox x:Name="CorrectOption4CheckBox" Content="Correct" Margin="0,0,0,10"/>

            <TextBlock Text="Point:" Margin="0,10,0,5"/>
            <TextBox x:Name="PointTextBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Bonus Point:" Margin="0,10,0,5"/>
            <TextBox x:Name="BonusPointTextBox" Height="30" Margin="0,0,0,10"/>

            <Button Content="Add Question" Click="AddQuestion_Click" Height="35" Margin="0,20,0,10"/>
            <ListBox x:Name="QuestionsListBox" Height="200" Margin="0,0,0,10"/>
        </StackPanel>
    </ScrollViewer>
</Window>

