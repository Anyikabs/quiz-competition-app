<Window x:Class="QuizCompetitionApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="700" Width="950">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Question Input -->
        <StackPanel Grid.Column="0" Margin="10">

            <TextBlock Text="Question:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="QuestionTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />

            <TextBlock Text="Answers:" FontWeight="Bold" Margin="10,10,0,5"/>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <CheckBox x:Name="Correct1" Margin="0,0,5,0"/>
                    <TextBox x:Name="Answer1" Width="600"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <CheckBox x:Name="Correct2" Margin="0,0,5,0"/>
                    <TextBox x:Name="Answer2" Width="600"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <CheckBox x:Name="Correct3" Margin="0,0,5,0"/>
                    <TextBox x:Name="Answer3" Width="600"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <CheckBox x:Name="Correct4" Margin="0,0,5,0"/>
                    <TextBox x:Name="Answer4" Width="600"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="Image:" FontWeight="Bold" Margin="10,10,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="ImagePathTextBox" Width="400" IsReadOnly="True"/>
                <Button Content="Browse" Width="80" Margin="10,0,0,0" Click="BrowseImage_Click"/>
            </StackPanel>

            <TextBlock Text="Points:" FontWeight="Bold" Margin="10,0,0,5"/>
            <TextBox x:Name="PointsTextBox" Width="100"/>

            <TextBlock Text="Bonus Points:" FontWeight="Bold" Margin="10,10,0,5"/>
            <TextBox x:Name="BonusPointsTextBox" Width="100"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Save Question" Width="150" Click="SaveQuestion_Click" Margin="0,0,10,0"/>
                <Button Content="Update Question" Width="150" Click="UpdateQuestion_Click" Margin="0,0,10,0"/>
                <Button Content="Delete Question" Width="150" Click="DeleteQuestion_Click"/>
            </StackPanel>
            <TextBlock Text="Preview:" FontWeight="Bold" Margin="10,10,0,5"/>
            <Image x:Name="PreviewImage" Width="200" Height="150" Stretch="Uniform" Margin="0,0,0,10"/>


        </StackPanel>

        <!-- Right Panel: List of Questions -->
        <ListBox x:Name="QuestionsListBox"
                 Grid.Column="1"
                 Margin="10"
                 DisplayMemberPath="DisplayText"
                 SelectionChanged="QuestionsListBox_SelectionChanged"/>
    </Grid>
</Window>
