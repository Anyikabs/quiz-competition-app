<Window x:Class="QuizCompetitionApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="650" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Question List -->
        <GroupBox Header="Questions" Grid.Column="0" Margin="5">
            <StackPanel>
                <ListBox x:Name="QuestionsListBox" Height="500" 
                         SelectionChanged="QuestionsListBox_SelectionChanged"
                         DisplayMemberPath="Text" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Delete" Click="DeleteQuestion_Click" Margin="0,0,5,0"/>
                    <Button Content="Clear" Click="ClearInputs_Click" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Editor Panel -->
        <GroupBox Header="Question Editor" Grid.Column="1" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    <TextBlock Text="Question Text:" Margin="0,5,0,0"/>
                    <TextBox x:Name="QuestionTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                    <!-- Answers -->
                    <TextBlock Text="Answers:" Margin="0,10,0,0"/>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="Answer1" Width="250" Margin="0,2,5,2"/>
                            <CheckBox x:Name="Correct1" Content="Correct" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="Answer2" Width="250" Margin="0,2,5,2"/>
                            <CheckBox x:Name="Correct2" Content="Correct" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="Answer3" Width="250" Margin="0,2,5,2"/>
                            <CheckBox x:Name="Correct3" Content="Correct" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="Answer4" Width="250" Margin="0,2,5,2"/>
                            <CheckBox x:Name="Correct4" Content="Correct" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Image Upload -->
                    <TextBlock Text="Image Path:" Margin="0,10,0,0"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="ImagePathTextBox" Width="250" Margin="0,0,5,0"/>
                        <Button Content="Browse..." Click="BrowseImage_Click"/>
                    </StackPanel>

                    <Image x:Name="ImagePreview" Height="100" Margin="0,5,0,0" Stretch="Uniform"/>

                    <!-- Points -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Points:"/>
                            <TextBox x:Name="PointsTextBox" Width="100"/>
                        </StackPanel>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Bonus Points:"/>
                            <TextBox x:Name="BonusPointsTextBox" Width="100"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Right">
                        <Button Content="Save" Click="SaveQuestion_Click" Margin="0,0,5,0"/>
                        <Button Content="Update" Click="UpdateQuestion_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
